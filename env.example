# Notion Integration
# Get your API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here

# Your Notion database ID
# You can find this in your database URL: https://www.notion.so/{workspace}/{database_id}?v={view_id}
NOTION_DATABASE_ID=your_notion_database_id_here

# Notion Webhook Verification Token
# This is generated by Notion when you create a webhook subscription
# You'll receive this token during the webhook verification process
NOTION_VERIFICATION_TOKEN=secret_your_verification_token_here

# Vercel Deploy Hook (Optional)
# Get this from your Vercel project settings > Git > Deploy Hooks
# Create a deploy hook and paste the URL here
VERCEL_DEPLOY_HOOK_URL=https://api.vercel.com/v1/integrations/deploy/your_deploy_hook_here

# Bunny CDN Configuration
# Storage Zone Name - found in Storage section of Bunny dashboard
BUNNY_STORAGE_ZONE=your_storage_zone_name
# Storage API Key - found in FTP & API Access section (Password field)
BUNNY_STORAGE_API_KEY=your_storage_api_key
# Storage Region - de, ny, la, sg, syd, or uk
BUNNY_STORAGE_REGION=de
# Pull Zone URL - your CDN URL (without https://)
BUNNY_PULL_ZONE_URL=your-pullzone.b-cdn.net 